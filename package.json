{
  "private": true,
  "name": "github-annual-report-generator",
  "version": "1.0.0",
  "description": "A GitHub Action to generate your personal annual report.",
  "type": "module",
  "scripts": {
    "report": "node scripts/year-report/generate-report.mjs",
    "test": "vitest run",
    "test:node": "node --test scripts/year-report/__tests__/stats.test.mjs scripts/year-report/__tests__/layout.test.mjs scripts/year-report/__tests__/artifact.test.mjs",
    "test:watch": "vitest",
    "test:all": "npm run test && npm run test:node"
  },
  "devDependencies": {
    "vitest": "^3.0.0",
    "playwright": "1.51.1"
  },
  "engines": {
    "node": ">=22"
  }
}
